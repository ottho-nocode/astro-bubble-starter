---
export const prerender = false;

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | Admin</title>
    <style>
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #f8fafc; /* bg-slate-50 */
        color: #0a0a0a;
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        font-size: 14px;
      }

      /* ── Header ── */
      .admin-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        position: sticky;
        top: 0;
        z-index: 10;
      }
      .admin-header-inner {
        max-width: 64rem; /* max-w-5xl */
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .admin-header-left {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      .admin-header-left h1 {
        font-size: 1.25rem; /* text-xl */
        font-weight: 700;
        color: #0f172a; /* text-slate-900 */
        letter-spacing: -0.025em;
      }
      .admin-header-left p {
        font-size: 0.875rem;
        color: #64748b; /* text-slate-500 */
      }
      .admin-header-right {
        display: flex;
        gap: 0.5rem;
        align-items: center;
      }

      /* ── Content ── */
      .admin-content {
        max-width: 64rem;
        margin: 0 auto;
        padding: 2.5rem 1.5rem 8rem;
      }

      /* ── Page title ── */
      .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 0.25rem;
        letter-spacing: -0.025em;
      }
      .page-subtitle {
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 2rem;
      }

      /* ── Cards (shadcn style) ── */
      .card {
        background: white;
        border-radius: 0.75rem; /* rounded-xl */
        border: 1px solid #e2e8f0;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05); /* shadow-sm */
        margin-bottom: 1.5rem;
        overflow: hidden;
      }
      .card-header {
        padding: 1.5rem 1.5rem 0;
      }
      .card-header h2 {
        font-size: 0.875rem; /* text-sm */
        font-weight: 600;
        color: #0f172a;
        line-height: 1;
      }
      .card-header p {
        font-size: 0.75rem;
        color: #94a3b8; /* text-slate-400 */
        margin-top: 0.375rem;
      }
      .card-body {
        padding: 1.5rem;
      }

      /* ── Form ── */
      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
      }
      .form-group { margin-bottom: 1rem; }
      .form-group:last-child { margin-bottom: 0; }
      .form-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #334155; /* text-slate-700 */
        margin-bottom: 0.375rem;
      }
      .form-group input, .form-group textarea {
        width: 100%;
        height: 2.25rem; /* h-9 */
        padding: 0.25rem 0.75rem;
        border: 1px solid #e2e8f0; /* border-input */
        border-radius: 0.375rem; /* rounded-md */
        font-size: 0.875rem;
        font-family: inherit;
        color: #0f172a;
        background: transparent;
        box-shadow: 0 1px 1px rgba(0,0,0,0.04); /* shadow-xs */
        transition: color 0.15s, box-shadow 0.15s;
        outline: none;
      }
      .form-group input::placeholder, .form-group textarea::placeholder {
        color: #94a3b8;
      }
      .form-group input:focus, .form-group textarea:focus {
        border-color: #0f172a;
        box-shadow: 0 0 0 3px rgba(15,23,42,0.08);
      }
      .form-group textarea {
        height: auto;
        min-height: 5rem;
        padding: 0.5rem 0.75rem;
        resize: vertical;
        line-height: 1.5;
      }

      /* ── Buttons (shadcn style) ── */
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        white-space: nowrap;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        font-family: inherit;
        border: none;
        cursor: pointer;
        transition: all 0.15s;
        text-decoration: none;
        outline: none;
        height: 2.25rem;
        padding: 0.5rem 1rem;
      }
      .btn:focus-visible {
        box-shadow: 0 0 0 3px rgba(15,23,42,0.08);
      }
      .btn:disabled {
        pointer-events: none;
        opacity: 0.5;
      }
      .btn svg { width: 16px; height: 16px; pointer-events: none; flex-shrink: 0; }

      /* Primary: dark bg */
      .btn-primary {
        background: #171717;
        color: white;
      }
      .btn-primary:hover { background: #171717e6; }

      /* Outline */
      .btn-outline {
        background: white;
        color: #0f172a;
        border: 1px solid #e2e8f0;
        box-shadow: 0 1px 1px rgba(0,0,0,0.04);
      }
      .btn-outline:hover { background: #f5f5f5; }

      /* Ghost */
      .btn-ghost {
        background: transparent;
        color: #64748b;
        padding: 0.5rem 0.75rem;
      }
      .btn-ghost:hover { background: #f5f5f5; color: #0f172a; }

      /* Destructive */
      .btn-destructive {
        background: #ef4444;
        color: white;
        font-size: 0.75rem;
        height: 1.5rem;
        padding: 0 0.5rem;
        gap: 0.25rem;
      }
      .btn-destructive:hover { background: #ef4444e6; }

      /* Secondary */
      .btn-secondary {
        background: #f5f5f5;
        color: #171717;
      }
      .btn-secondary:hover { background: #e5e5e5; }

      /* ── Alerts ── */
      .alert {
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.8125rem;
        font-weight: 500;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        animation: slideDown 0.2s ease;
      }
      .alert-success {
        background: #f0fdf4;
        color: #15803d;
        border: 1px solid #bbf7d0;
      }
      .alert-error {
        background: #fef2f2;
        color: #dc2626;
        border: 1px solid #fecaca;
      }

      /* ── Sticky save bar ── */
      .save-bar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        border-top: 1px solid #e2e8f0;
        padding: 0.75rem 1.5rem;
        z-index: 10;
      }
      .save-bar-inner {
        max-width: 64rem;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .save-bar-status {
        font-size: 0.8125rem;
        color: #94a3b8;
      }

      /* ── Feature items ── */
      .feature-item {
        border: 1px solid #e2e8f0;
        border-radius: 0.5rem;
        padding: 1rem 1.25rem;
        margin-bottom: 0.75rem;
        position: relative;
        background: white;
      }
      .feature-item-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.75rem;
      }
      .feature-item-number {
        font-size: 0.75rem;
        font-weight: 500;
        color: #94a3b8;
      }

      /* ── Spinner ── */
      .spinner {
        width: 14px;
        height: 14px;
        border: 2px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.6s linear infinite;
      }
      @keyframes spin { to { transform: rotate(360deg); } }
      @keyframes slideDown {
        from { opacity: 0; transform: translateY(-4px); }
        to { opacity: 1; transform: translateY(0); }
      }

      /* ── Loading ── */
      .loading-overlay {
        position: fixed;
        inset: 0;
        background: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        transition: opacity 0.3s;
      }
      .loading-overlay.hidden { opacity: 0; pointer-events: none; }
      .loading-dots { display: flex; gap: 6px; }
      .loading-dots span {
        width: 6px; height: 6px;
        background: #171717;
        border-radius: 50%;
        animation: bounce 1.2s ease-in-out infinite;
      }
      .loading-dots span:nth-child(2) { animation-delay: 0.2s; }
      .loading-dots span:nth-child(3) { animation-delay: 0.4s; }
      @keyframes bounce {
        0%, 80%, 100% { transform: scale(0.6); opacity: 0.3; }
        40% { transform: scale(1); opacity: 1; }
      }

      /* ── Badge ── */
      .badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 9999px;
        border: 1px solid #e2e8f0;
        padding: 0.125rem 0.5rem;
        font-size: 0.75rem;
        font-weight: 500;
        white-space: nowrap;
        color: #0f172a;
      }

      /* ── Responsive ── */
      @media (max-width: 640px) {
        .admin-content { padding: 1.5rem 1rem 8rem; }
        .form-row { grid-template-columns: 1fr; }
        .admin-header-inner { padding: 0.75rem 1rem; }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
