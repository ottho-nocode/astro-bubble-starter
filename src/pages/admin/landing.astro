        sendBtn.disabled = false;
        sendBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="19" x2="12" y2="5"/><polyline points="5 12 12 5 19 12"/></svg>';
      }
    }

    function applyAiChanges(changes: any) {
      const iframe = document.getElementById("lpPreview") as HTMLIFrameElement;
      const ov = getCurrentOverrides();

      if (changes.texts) {
        Object.entries(changes.texts).forEach(([key, value]) => {
          ov.texts[key] = value as string;
          updateTemplateElement(key, value as string, "text");
        });
      }
      if (changes.images) {
        if (!ov.images) ov.images = {};
        Object.entries(changes.images).forEach(([key, value]) => {
          ov.images[key] = value as string;
          updateTemplateElement(key, value as string, "image");
        });
      }
      if (changes.hrefs) {
        if (!ov.hrefs) ov.hrefs = {};
        Object.entries(changes.hrefs).forEach(([key, value]) => {
          ov.hrefs[key] = value as string;
          updateTemplateElement(key, value as string, "href");
        });
      }
      if (changes.hiddenSections) {
        changes.hiddenSections.forEach((id: string) => toggleSectionVisibility(id, false));
      }
      if (changes.visibleSections) {
        changes.visibleSections.forEach((id: string) => toggleSectionVisibility(id, true));
      }

      // Rebuild controls to reflect AI changes
      buildTemplateSections(templateSchema);
    }

