---
const stats = [
  { value: "3 000+", label: "Apprenants formes", icon: "users" },
  { value: "9/10", label: "Satisfaction moyenne", icon: "heart" },
  { value: "5/5", label: "Note Google (172 avis)", icon: "star" },
  { value: "93%", label: "Taux de completion", icon: "target" },
];
---

<section class="py-20 lg:py-24 relative bg-[#F5F3EF]">
  <div class="mx-auto max-w-6xl px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {stats.map((stat, i) => (
        <div class={`reveal reveal-delay-${i + 1} group relative rounded-2xl border border-gray-200/60 bg-white p-8 text-center hover:shadow-lg hover:shadow-gray-900/5 hover:scale-[1.02] transition-all duration-300`}>
          <div class="relative z-10">
            <p class="text-4xl sm:text-5xl font-heading font-extrabold bg-gradient-to-b from-gray-900 to-gray-500 bg-clip-text text-transparent mb-3" style="font-variant-numeric: tabular-nums">
              {stat.value}
            </p>
            <p class="text-sm text-gray-500 font-body">
              {stat.label}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
