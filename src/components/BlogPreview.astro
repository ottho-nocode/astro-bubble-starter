---
import { getPosts } from "../lib/bubble";
import { getLandingConfig } from "../lib/landing-config";

const cfg = getLandingConfig();
const bp = cfg.blogPreview;

let latestPosts: Awaited<ReturnType<typeof getPosts>> = [];
if (bp.visible) {
  try {
    const allPosts = await getPosts();
    latestPosts = allPosts.slice(0, bp.postCount);
  } catch {
    // En mode dev sans API Bubble configuree, on continue sans articles
  }
}

if (!bp.visible) return;

const colsMap: Record<number, string> = { 2: "md:grid-cols-2", 3: "md:grid-cols-3", 4: "md:grid-cols-2 lg:grid-cols-4", 6: "md:grid-cols-3 lg:grid-cols-3" };
const gridCols = colsMap[bp.postCount] || "md:grid-cols-3";
---

<section class:list={["relative", bp.verticalPadding]} style={`background:${bp.bgColor};`}>
  <div class="relative z-10 mx-auto max-w-6xl px-6">
    <div class="reveal flex flex-col sm:flex-row sm:items-end sm:justify-between gap-6 mb-14">
      <div>
        {bp.badgeText && (
          <div class="inline-flex items-center gap-2 rounded-full bg-white border border-gray-200/60 px-4 py-1.5 mb-5 shadow-sm">
            <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">{bp.badgeText}</span>
          </div>
        )}
        <h2 class="text-3xl sm:text-4xl font-heading font-extrabold text-gray-900">
          {bp.sectionTitle}
        </h2>
        {bp.sectionSubtitle && (
          <p class="mt-3 text-lg text-gray-500 font-body max-w-lg">
            {bp.sectionSubtitle}
          </p>
        )}
      </div>
      {bp.ctaText && (
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm font-semibold text-primary-600 hover:text-primary-500 transition-colors duration-200 group"
        >
          {bp.ctaText}
          <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform duration-200" viewBox="0 0 16 16" fill="none">
            <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </a>
      )}
    </div>

    {latestPosts.length > 0 ? (
      <div class:list={["grid grid-cols-1 gap-6", gridCols]}>
        {latestPosts.map((post, i) => (
          <a
            href={`/blog/${post.slug}`}
            class:list={[`reveal reveal-delay-${i + 1} group relative border border-gray-200/60 bg-white overflow-hidden hover:shadow-lg hover:shadow-gray-900/5 hover:scale-[1.01] transition-all duration-300`, bp.cardRadius, bp.cardShadow !== "none" ? bp.cardShadow : ""]}
          >
            {bp.showCoverImage && post.cover_image && (
              <div class="relative aspect-[16/9] overflow-hidden">
                <img src={post.cover_image} alt={post.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" width="400" height="225" />
              </div>
            )}
            <div class="relative z-10 p-6">
              <div class="flex items-center gap-3 mb-3">
                {bp.showCategory && post.category && (
                  <span class="text-xs font-medium text-primary-600 bg-primary-50 rounded-full px-2.5 py-0.5">{post.category}</span>
                )}
                {bp.showDate && (
                  <time class="text-xs text-gray-400" datetime={post.date}>
                    {new Date(post.date).toLocaleDateString("fr-FR", { day: "numeric", month: "short", year: "numeric" })}
                  </time>
                )}
              </div>
              <h3 class="text-lg font-heading font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors duration-200 line-clamp-2">
                {post.title}
              </h3>
              {bp.showExcerpt && post.excerpt && (
                <p class="text-sm text-gray-500 line-clamp-2 leading-relaxed">{post.excerpt}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class:list={["grid grid-cols-1 gap-6", gridCols]}>
        {Array.from({ length: bp.postCount }).map((_, i) => (
          <div class:list={[`reveal reveal-delay-${(i % 3) + 1} border border-gray-200/60 bg-white overflow-hidden`, bp.cardRadius]}>
            <div class="aspect-[16/9] bg-gray-100 animate-pulse"></div>
            <div class="p-6 space-y-3">
              <div class="h-3 bg-gray-100 rounded w-1/3 animate-pulse"></div>
              <div class="h-5 bg-gray-100 rounded w-full animate-pulse"></div>
              <div class="h-3 bg-gray-50 rounded w-2/3 animate-pulse"></div>
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</section>
