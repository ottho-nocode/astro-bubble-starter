---
import type { CompanyInfo } from "../lib/bubble";
import { getLandingConfig } from "../lib/landing-config";

interface Props {
  company: CompanyInfo;
}

const { company } = Astro.props;
const cfg = getLandingConfig();
const c = cfg.contact;

const hasContact = company.email || company.telephone || company.adresse;
if (!c.visible || !hasContact) return;
---

<section class:list={[c.verticalPadding]} style={`background:${c.bgColor};`} id="contact">
  <div class="mx-auto max-w-6xl px-6">
    <div class="reveal text-center mb-14">
      <h2 class="text-3xl sm:text-4xl font-heading font-extrabold" style={`color:${c.headingColor};`}>
        {c.headingText}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {company.email && (
        <div class:list={["reveal reveal-delay-1 border border-gray-200/60 p-8 text-center", c.cardRadius]} style={`background:${c.cardBgColor};`}>
          <div class="mx-auto mb-4 w-12 h-12 rounded-xl flex items-center justify-center" style={`background:${c.iconBgColor};`}>
            <svg class="w-6 h-6" style={`color:${c.iconColor};`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
          </div>
          <h3 class="font-heading font-bold text-gray-900 mb-2">Email</h3>
          <a href={`mailto:${company.email}`} class="text-sm hover:opacity-80 transition-colors break-all" style={`color:${c.linkColor};`}>
            {company.email}
          </a>
        </div>
      )}

      {company.telephone && (
        <div class:list={["reveal reveal-delay-2 border border-gray-200/60 p-8 text-center", c.cardRadius]} style={`background:${c.cardBgColor};`}>
          <div class="mx-auto mb-4 w-12 h-12 rounded-xl flex items-center justify-center" style={`background:${c.iconBgColor};`}>
            <svg class="w-6 h-6" style={`color:${c.iconColor};`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
          </div>
          <h3 class="font-heading font-bold text-gray-900 mb-2">Telephone</h3>
          <a href={`tel:${company.telephone}`} class="text-sm hover:opacity-80 transition-colors" style={`color:${c.linkColor};`}>
            {company.telephone}
          </a>
        </div>
      )}

      {company.adresse && (
        <div class:list={["reveal reveal-delay-3 border border-gray-200/60 p-8 text-center", c.cardRadius]} style={`background:${c.cardBgColor};`}>
          <div class="mx-auto mb-4 w-12 h-12 rounded-xl flex items-center justify-center" style={`background:${c.iconBgColor};`}>
            <svg class="w-6 h-6" style={`color:${c.iconColor};`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
          </div>
          <h3 class="font-heading font-bold text-gray-900 mb-2">Adresse</h3>
          <p class="text-sm text-gray-600">{company.adresse}</p>
        </div>
      )}
    </div>
  </div>
</section>
