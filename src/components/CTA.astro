---
import { loadSiteConfig } from "../config";

const config = await loadSiteConfig();

interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = config.cta?.title || "Prêt à commencer ?",
  description = config.cta?.description || "Rejoignez-nous et découvrez comment notre solution peut vous aider.",
  ctaText = config.cta?.ctaText || "Essayer gratuitement",
  ctaLink = config.cta?.ctaLink || config.bubbleAppUrl,
} = Astro.props;
---

<section class="py-20">
  <div class="mx-auto max-w-4xl px-6">
    <div class="rounded-2xl bg-primary-600 px-8 py-16 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">{title}</h2>
      <p class="text-primary-100 text-lg mb-8 max-w-xl mx-auto">{description}</p>
      <a
        href={ctaLink}
        class="inline-block rounded-lg bg-white px-8 py-3 text-base font-semibold text-primary-700 shadow-sm hover:bg-primary-50 transition-colors"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>
