---
import { getLandingConfig } from "../lib/landing-config";

interface Props {
  name: string;
}

const { name } = Astro.props;
const cfg = getLandingConfig();
const f = cfg.footer;

if (!f.visible) return;

const links = [
  { label: "Accueil", href: "/" },
  { label: "Blog", href: "/blog" },
];
---

<footer style={`background:${f.bgColor};`}>
  <div class="mx-auto max-w-6xl px-6 pt-12 pb-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8 mb-8">
      <a href="/" class="flex items-center gap-2">
        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background:rgba(255,255,255,0.2);">
          <span class="font-heading font-extrabold text-sm" style={`color:${f.textColor};`}>{name.charAt(0).toUpperCase()}</span>
        </div>
        <span class="text-lg font-heading font-bold" style={`color:${f.textColor};`}>{name}</span>
      </a>

      <div class="flex items-center gap-6">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-sm hover:opacity-100 transition-colors duration-200"
            style={`color:${f.linkColor};`}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>

    <div class="border-t pt-8 text-center" style="border-color:rgba(255,255,255,0.15);">
      <p class="text-xs" style={`color:${f.copyrightColor};`}>
        &copy; {new Date().getFullYear()} {name}. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>
