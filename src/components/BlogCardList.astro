---
interface Props {
  title: string;
  excerpt: string;
  slug: string;
  coverImage?: string;
  date: string;
  category?: string;
  showCoverImage?: boolean;
  showCategoryBadge?: boolean;
  showDate?: boolean;
  showExcerpt?: boolean;
  readMoreText?: string;
}

const {
  title,
  excerpt,
  slug,
  coverImage,
  date,
  category,
  showCoverImage = true,
  showCategoryBadge = true,
  showDate = true,
  showExcerpt = true,
  readMoreText = "Lire la suite",
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("fr-FR", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<a href={`/blog/${slug}`} class="blog-card block group flex rounded-xl border border-gray-100 bg-white overflow-hidden shadow-sm hover:shadow-md transition-shadow no-underline">
  {showCoverImage && coverImage && (
    <div class="flex-shrink-0">
      <img
        src={coverImage}
        alt={title}
        class="h-full w-48 object-cover group-hover:opacity-90 transition-opacity"
        loading="lazy"
      />
    </div>
  )}
  <div class="p-6 flex flex-col justify-center">
    <div class="flex items-center gap-3 mb-2">
      {showCategoryBadge && category && (
        <span class="text-xs font-medium text-primary-700 bg-primary-50 px-2 py-1 rounded">
          {category}
        </span>
      )}
      {showDate && (
        <time class="text-xs text-gray-400" datetime={date}>
          {formattedDate}
        </time>
      )}
    </div>
    <h3 class="blog-card-title text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
      {title}
    </h3>
    {showExcerpt && (
      <p class="text-gray-600 text-sm leading-relaxed line-clamp-2">{excerpt}</p>
    )}
    {readMoreText && (
      <span class="inline-block mt-3 text-sm font-medium text-primary-600 group-hover:text-primary-700">
        {readMoreText} &rarr;
      </span>
    )}
  </div>
</a>
