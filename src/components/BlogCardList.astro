---
interface Props {
  title: string;
  excerpt: string;
  slug: string;
  coverImage?: string;
  date: string;
  category?: string;
}

const { title, excerpt, slug, coverImage, date, category } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("fr-FR", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="group flex rounded-xl border border-gray-100 bg-white overflow-hidden shadow-sm hover:shadow-md transition-shadow">
  {coverImage && (
    <a href={`/blog/${slug}`} class="flex-shrink-0">
      <img
        src={coverImage}
        alt={title}
        class="h-full w-48 object-cover group-hover:opacity-90 transition-opacity"
        loading="lazy"
      />
    </a>
  )}
  <div class="p-6 flex flex-col justify-center">
    <div class="flex items-center gap-3 mb-2">
      {category && (
        <span class="text-xs font-medium text-primary-700 bg-primary-50 px-2 py-1 rounded">
          {category}
        </span>
      )}
      <time class="text-xs text-gray-400" datetime={date}>
        {formattedDate}
      </time>
    </div>
    <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
      <a href={`/blog/${slug}`}>{title}</a>
    </h3>
    <p class="text-gray-600 text-sm leading-relaxed line-clamp-2">{excerpt}</p>
    <a
      href={`/blog/${slug}`}
      class="inline-block mt-3 text-sm font-medium text-primary-600 hover:text-primary-700"
    >
      Lire la suite &rarr;
    </a>
  </div>
</article>
